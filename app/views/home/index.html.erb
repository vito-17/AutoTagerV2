<% content_for :javascript do %>
  <script type="text/javascript">
    ShopifyApp.ready(function(){
      ShopifyApp.Bar.initialize({ title: "Home" });
    });
  </script>
<% end %>
<h2>Customers</h2>

<ul>
  <% @customers.each do |customer| %>
    <li><%= link_to "#{customer.first_name} #{customer.last_name} - #{pretty_tags(customer)}", "https://#{@shop_session.url}/admin/customers/#{customer.shopify_customer_id}", target: "_top" %></li>
  <% end %>
</ul>
